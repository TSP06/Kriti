@html lang=en
head {
  title "HWT"
  /* @html inject !doctype, meta utf8 and meta viewport */
  meta 
    name=description 
    content=(
      "HWT is an opionated template system aimed"
      "to simplify the writing of HTML."
    )
  link
    rel=icon
    href='data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><text y=".9em" font-size="90">üõ†Ô∏è</text></sg>'
  script src=https://cdn.tailwindcss.com
}
body {
  main.grid.grid-cols-1 {
    h1 {
      @raw "<em>HWT</em>, by Pragmore"
      span aria-hidden=true "üõ†Ô∏è"
    }
    p.text-xl {
      strong "HWT"
      _ "is and opionated template system aimed"
      _ "to simplify the writing of"
      em "HTML"
    }
    p {
      a #call-to-action 
        .bg-blue-500.hover:bg-blue-700
        .text-white.font-bold
        .py-2.px-4.rounded 
        href=https://github.com/pragmore/hwt
        "Download from GitHub"
    }
    @if( $features && $features.length > 0 ) {
      $position = 0
      ul @for($feature of $features) {
        // Setting the class to row-0 or row-1
        $class = "row-" + $position % 2
        li.$class 
          data-position=$position
          "${feature}"
        $position++
      }
    }
  }
  footer {
    span { 
      "Made with ‚ù§Ô∏è  by"
      a href=https://pragmore.com "Pragmore"
    }
  }
}
